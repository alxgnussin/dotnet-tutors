@model Tutors.Models.Teacher
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-3"><img src="@Model.Picture" class="img-fluid" alt=""></div>
            <div class="col-9">
                <p class="float-right">Рейтинг: @Model.Rating Ставка: @Model.Price / час</p>
                <h2 class="h4">@Model.Name</h2>
                <p>@Model.About.Substring(0, 50) ...</p>
                <a href="profile.html" class="btn btn-outline-primary btn-sm mr-3 mb-2">Показать информацию и расписание</a>

            </div>
        </div>
    </div>
</div>