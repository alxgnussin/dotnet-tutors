@{ ViewData["Title"] = "All teachers";
                Layout = "_MasterPage"; }

@using Tutors.Models
@model List<Tutors.Models.Teacher>
<main class="container mt-3">
    <h1 class="h1 text-center w-50 mx-auto mt-1 py-5 mb-4"><strong>Все преподаватели</strong></h1>
    <div class="row">
        <div class="col-12 col-lg-10 offset-lg-1 m-auto">
            <div class="card mb-4">
                <div class="card-body align-right">
                    <p class="lead float-left d-inline-block mt-2 mb-0"><strong>@Model.Count преподавателей в базе</strong></p>
                    <form class="float-right d-inline-block">
                        <div class="form-inline">
                            <select class="custom-select my-1 mr-2" id="inlineFormCustomSelectPref" name="sorting">
                                <option selected>В случайном порядке</option>
                                <option value="3">Сначала лучшие по рейтингу</option>
                                <option value="1">Сначала дорогие</option>
                                <option value="2">Сначала недорогие</option>
                            </select>
                            <button type="submit" class="btn btn-primary my-1">Сортировать</button>
                        </div>
                    </form>
                </div>
            </div>

            @foreach (var teacher in Model)
            {
                @Html.Partial("TeacherSection", teacher)            
            }
        </div>
    </div>

    @Html.Partial("RequestSection")

</main>
